{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"outDir": "dist",
		"lib": [
			"dom",
			"es2018"
		],
		"sourceMap": true,
		"rootDir": "src",
		"experimentalDecorators": true,
		"strict": true,
		"esModuleInterop": true,
		"declaration": true
    },
    "include": [
        "src/**/*"
    ],
